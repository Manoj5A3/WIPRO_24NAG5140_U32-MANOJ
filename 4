CREATE OR REPLACE PROCEDURE FIND_MIN_MAX_SALARY(P_DEPARTMENT IN VARCHAR2,
P_MIN_SALARY OUT NUMBER,
P MAX SALARY OUT NUMBER)AS
BEGIN
SELECT MIN(SALARY) , MAX(SALARY)
INTO P_MIN_SALARY, P_MAX_SALARY
FROM EMPLOYEES
WHERE DEPARTMENT NAME =P_DEPARTMENT;
IF P_MIN SALARY IS NULL OR P MAX SALARY IS NULL THEN
  RAISE NO_DATA FOUND;
END IF;
EXCEPTION
  WHEN NO DATA FOUND THEN
    P_MIN SALARY: = NULL;
    P_MAX SALARY: = NULL;
    DBMS_OUTPUT.PUT_LINE("NO EMPLOYEES FOUND IN DEPARTMENT: " ||P_DEPARTMENT);
  WHEN OTHERS THEN
    P_MIN SALARY : = NULL;
    P. MAX SALARY: = NULL;
    DBMS_OUTPUT.PUT_LINE("AN ERROR OCCURED: "||SQLERRM);
END;


DECLARE
  V_MIN SALARY NUMBER;
  V_MAX SALARY NUMBER;
BEGIN
  FIND_MIN_MAX_SALARY ("Sales ' , V_MIN_SALARY, V_MAX_SALARY);
  DBMS_OUTPUT.PUT_LINE('MIN SALARY ' ||V_MIN_SALARY);
  DBMS_OUTPUT.PUT_LINE('MAX SALARY ' ||V_MAX_SALARY);
END;
