CREATE TABLE TEACHER (
    TEACHER_ID NUMBER PRIMARY KEY,
    TEACHER_NAME VARCHAR2(50) NOT NULL,
    SUBJECT VARCHAR2(50) UNIQUE
);

CREATE TABLE STUDENT (
    STUDENT_ID NUMBER PRIMARY KEY,
    STUDENT_NAME VARCHAR2(50) NOT NULL,
    COURSE VARCHAR2(50),
    MARKS NUMBER CHECK (MARKS >= 0 AND MARKS <= 100),
    TEACHER_ID NUMBER,
    CONSTRAINT FK_TEACHER FOREIGN KEY (TEACHER_ID) REFERENCES TEACHER(TEACHER_ID)
);



-- Insert data into TEACHER table
INSERT INTO TEACHER VALUES (1, 'Mr. Smith', 'Mathematics');
INSERT INTO TEACHER VALUES (2, 'Ms. Johnson', 'Science');

-- Insert data into STUDENT table
INSERT INTO STUDENT VALUES (101, 'Alice', 'Mathematics', 85, 1);
INSERT INTO STUDENT VALUES (102, 'Bob', 'Science', 90, 2);
INSERT INTO STUDENT VALUES (103, 'Charlie', 'Mathematics', 70, 1);


SELECT s.STUDENT_NAME, s.COURSE, s.MARKS, s.TEACHER_ID, t.TEACHER_NAME
FROM STUDENT s
JOIN TEACHER t
ON s.TEACHER_ID = t.TEACHER_ID;
